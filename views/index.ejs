<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('layouts/header'); -%>
    <!-- css style -->
    <link rel="stylesheet" href="/css/indexStyle.css">
    <title>MusicStreaming | Home</title>
</head>
<body>
    <%- include('layouts/navbar'); -%>
    <%- include('layouts/sidebar'); -%>
    <div id="banner">
        <div class="container">
            <h2>HIT</h2>
            <div class="slideshow-container">
                <div class="mySlides fade" id="first">
                  <div class="numbertext">1 / 3</div>
                  <img src="/src/image1.jpg" style="width:100%; height:320px;">
                  <div class="text">Caption One</div>
                </div>
                
                <div class="mySlides fade">
                  <div class="numbertext">2 / 3</div>
                  <img src="/src/image2.jpg" style="width:100%; height:320px;">
                  <div class="text">Caption Two</div>
                </div>
                
                <div class="mySlides fade">
                  <div class="numbertext">3 / 3</div>
                  <img src="/src/image3.jpg" style="width:100%; height:320px;">
                  <div class="text">Caption Three</div>
                </div>
                
                <!--<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>-->
                
                </div>
                
                <div class="dots" style="text-align:center">
                  <span class="dot" onclick="currentSlide(1)"></span> 
                  <span class="dot" onclick="currentSlide(2)"></span> 
                  <span class="dot" onclick="currentSlide(3)"></span> 
                </div>
        </div>
    </div>
    <div id="contents">
        <div class="container">
            <h2>Recently Played</h2>
            <div class="albums">
                <div class="album kylepatrick" id="JSr-QmMttWg" onclick=onClick(this.id)>
                    <img src="/src/cover1.jpg">
                    <span class="title">Go for Gold!</span>
                    <span>Kyle Patrick</span>
                </div>
                <div class="album the1975" id="CHk5SWVO4p8" onclick=onClick(this.id)>
                    <img src="/src/cover2.jpg">
                    <span class="title">Chocolate</span>
                    <span>The 1975</span>
                </div>
                <div class="album theclickfive" id="_08BBIGkwA8" onclick=onClick(this.id)>
                    <img src="/src/cover3.jpg">
                    <span class="title">Don't Let Me Go</span>
                    <span>the Click Five</span>
                </div>
                <div class="album wheatus" id="zz0JXbwNUk8" onclick=onClick(this.id)>
                    <img src="https://i.scdn.co/image/ab67616d0000b2735320d750568b1a676818075b">
                    <span class="title">Ain't No Man</span>
                    <span>The Avett Brothers</span>
                </div>
            </div>
        </div>
    </div>
    <!-- 수정 -->
    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>    
    <script type="text/javascript" src="/js/slide.js"></script>
    <script type="text/javascript" src="/js/search.js"></script>
</body>
</html>